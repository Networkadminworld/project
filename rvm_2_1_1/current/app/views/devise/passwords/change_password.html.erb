<div class="modal fade" id="change_pwd" aria-hidden="true">
  <div class="modal-dialog signup">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          &nbsp;
        </button>
        <h4 class="modal-title">Change Password</h4>
      </div>
      <div class="modal-body signin">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="form-left">
              <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
                  <div class="form-group">
                    <label class="sr-only" for="InputPassword">Old Password</label>
                    <%= f.password_field :password, :autofocus => true, :class=>"form-control input-lg", :tabindex=>"1", :id => "password",  :placeholder => "Old Password" %>
                    <div class="error" style="display: none;">
                      Please enter the old password
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="sr-only" for="InputPassword">New Password</label>
                    <%= f.password_field :new_password, :class=>"form-control input-lg", :tabindex=>"2", :id => "new_password",  :placeholder => "New Password" %>
                    <div class="error" style="display: none;">
                      Please enter the new password
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="sr-only" for="InputConfirmPassword">Confirm New Password</label>
                    <%= f.password_field :confirm_password, :class=>"form-control input-lg", :tabindex=>"3", :id => "confirm_password",  :placeholder => "Confirm New Password" %>
                    <div class="error" style="display: none;">
                      Please confirm the new password
                    </div>
                  </div>
                  <div class="btn-wrap visible-screen">
                    <button type="submit" class="button medium orange signup_submit">
                      Submit
                    </button>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>