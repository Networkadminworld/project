<%if  @pricing_plan.present? %>
<div class="tab-content inner" style="border: 2px solid #808080;
    border-radius: 25px;margin-bottom: 10px;">
  <div class="tab-wrapper">
    <div class="row">
      <div class="col-lg-10 col-sm-6 col-md-12 col-xs-12">
        <%= form_for(pricing_plan, url: "" ) do |f| %>
        <div class="row">
          <div class="col-lg-12" style="width: 136%">
            <label>Channels</label>
            <div class="form-group" style="display: inline-block">
              <% @channels.each do |channel|%>
                  <%= check_box_tag 'channels_id[]', channel.id,(true if selected_channels(pricing_plan,channel,params)), :disabled => true %>
                  <%= label_tag "channels_id[][#{channel.id}]", channel.name %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <label>Email Count</label>
            <div class="form-group">
              <%= f.text_field :email_count, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Email Count" , :id => "email_count", :tabindex => 2, :readonly => true %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <label>SMS Count</label>
            <div class="form-group">
              <%= f.text_field :sms_count, :class => "text_field rc_5 form-control input-medium", :placeholder => "SMS Count" , :id => "sms_count", :tabindex => 3, :readonly => true %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <label>Customer Records Count</label>
            <div class="form-group">
              <%= f.text_field :customer_records_count, :class => "text_field rc_5 form-control input-medium"  , :placeholder => "Customer Records Count" , :tabindex => 4, :readonly => true %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <label>Campaigns Count</label>
            <div class="form-group">
              <%= f.number_field :campaigns_count, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Campaigns Count", :id => "call_count", :tabindex => 5, :readonly => true %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <label>FB Boost budget</label>
            <div class="form-group">
              <%= f.number_field :fb_boost_budget, :class => "text_field rc_5 form-control input-medium", :placeholder => "FB boost budget" , :tabindex => 6, :readonly => true%>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <label>Total Reach</label>
            <div class="form-group">
              <%= f.number_field :total_reach, :class => "text_field rc_5 form-control input-medium", :placeholder => "Total Reach" , :tabindex => 7, :readonly => true %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <label>Country</label>
            <div class="form-group">
              <%= f.select :country, options_for_select(Country.all, :selected => selected_country(@pricing_plan)), {}, { :class => 'text_field rc_5 form-control input-medium', :tabindex => 8, :readonly => true, :disabled => true } %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <label>Currency</label>
            <div class="form-group">
              <%= f.select :currency_id, options_from_collection_for_select(Currency.all, :id, :name), {}, { :class => 'text_field rc_5 form-control input-medium', :tabindex => 9, :readonly => true,:disabled => true } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
</div>
</div>
  <%else%>
      <span>No plan detail found.</span>
  <% end %>
<script>
    $("#email_count, #sms_count,#customers_count, #tenant_count").keypress(function (e) {
        if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
            return false;
        }
    });
</script>