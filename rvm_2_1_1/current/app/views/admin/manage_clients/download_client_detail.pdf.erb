<div style="text-align: center; margin-bottom: 10px; font-size:16px; font-weight: bold;border-bottom: 1px solid black;">
  Client Details
</div>
<table class= "Table">
  <thead>
    <tr>
      <th style="text-align: center;"> FirstName</th>
      <th style="text-align: center;">LastName</th>
      <th style="text-align: center;">Email</th>
      <th style="text-align: center;">Company</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td style="text-align: center;"> <%=@client.first_name %> </td>
      <td style="text-align: center;"> <%=@client.last_name%></td>
      <td style="text-align: center;"><%=@client.email%></td>
      <td style="text-align: center;"><%= @client.company.try(:name)%></td>
    </tr>
  </tbody>
</table>


<div style="text-align: center; margin-bottom: 10px; font-size:16px; font-weight: bold;border-bottom: 1px solid black;">
  Share Details
</div >
<table class= "Table">
<thead>
  <tr>
    <th style="text-align: center;"> Email Count</th>
    <th style="text-align: center;">Sms Count</th>
    <th style="text-align: center;">Customer Record Count</th>
  </tr>
</thead>
<tbody>
  <tr>
   <td style="text-align: center;"> <%= @share_detail.try(:email_count)%> </td>
   <td style="text-align: center;"><%= @share_detail.try(:sms_count)%></td> 
   <td style="text-align: center;"><%= @share_detail.try(:customer_records_count)%></td> 
  </tr>
</tbody>
</table>


<% if @tenants.present? %>
<div style=" text-align: center; margin-bottom: 10px; font-size:16px; font-weight: bold;border-bottom: 1px solid black;">
  Tenant Details
</div>
<table class= "Table user-table" style="table-layout: fixed;">
  <thead>
    <tr>
      <th style="text-align: center;"> Name</th>
      <th style="text-align: center;">Address</th>
      <th style="text-align: center;"> Region Name</th>
      <th style="text-align: center;"> Type Name</th>
    </tr>
  </thead>
 <tbody>
  <% @tenants.each do |tenant| %>
  <tr>
    <td style="text-align: center;"><%= tenant.name %></td>
    <td style="word-break: break-all;white-space: normal;text-align: center;">
      <%= tenant.address %> 
    </td>
    <td style="text-align: center;"><%= tenant.tenant_region.try(:name) %></td>
    <td style="text-align: center;"><%= tenant.tenant_type.try(:name) %></td>
  </tr>
  <% end %>
</tbody>
</table>
<%else %>
<div style="color: #d9534f;text-align: center;bottom:6px;position: relative;font-size: 17px;">
  No  Tenants found.
</div>
<% end %>

<div style="text-align: center; margin-bottom: 10px; font-size:16px; font-weight: bold;border-bottom: 1px solid black;">
  Client User Details
</div>
<table class= "Table">
  <thead>
    <tr>
      <th style="text-align: center;"> FirstName</th>
      <th style="text-align: center;">LastName</th>
      <th style="text-align: center;">Email</th>
    </tr>
  </thead>
  <tbody>
    <% @client_users.each do |user| %>
    <tr>
      <td style="text-align: center;"> <%= user.first_name %> </td>
      <td style="text-align: center;"> <%= user.last_name%></td>
      <td style="text-align: center;"><%= user.email%></td>
    </tr>
    <% end %>
  </tbody>
</table>
