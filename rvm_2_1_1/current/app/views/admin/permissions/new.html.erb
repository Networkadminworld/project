<div class="tab-content inner">
  <div class="tab-wrapper">
    <div class="row">
      <div class="col-lg-4 col-sm-6 col-md-12 col-xs-12">
        <%= form_for(@role, url: "/admin/permissions" ) do |f| %>
            <div class="row">
              <div class="col-lg-12">
                <label>Name</label>
                <div class="form-group">
                  <%= f.text_field :name, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Role Name" , :tabindex => 1%>
                  <span style="color: red"><%= @role.errors ? @role.errors.messages[:name][0] : '' %></span>
                </div>
                <label>Profile</label>
                <div class="form-group">
                  <%= f.text_area :profile, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Role Profile" , :tabindex => 2%>
                </div>
              </div>
            </div>

            <div class="btn-wrap btn-update-info">
              <%= f.hidden_field :is_default, value: true%>
              <%= f.submit  "Save", :class => "button medium orange", :tabindex => 3  %>
              <a href="/admin/permissions" class="article" id="back_to_users">Back</a>
            </div>
            </div>
            </div>
        <% end %>
        </div>
</div>
</div>