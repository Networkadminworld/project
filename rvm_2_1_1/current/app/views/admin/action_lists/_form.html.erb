<div class="tab-content inner">
  <div class="tab-wrapper">
    <div class="row">
      <div class="col-lg-4 col-sm-6 col-md-12 col-xs-12">
        <%= form_for [:admin, @action_list] do |f| %>
            <div class="row">
              <div class="col-lg-12">
                <label>Action</label>
                <div class="form-group">
                  <%= f.text_field :action, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Action Name" , :id => "action", :tabindex => 2 %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <label>Weight</label>
                <div class="form-group">
                  <%= f.number_field :weight, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "Weight" , :id => "weight", :tabindex => 3 %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <label>URL</label>
                <div class="form-group">
                  <%= f.text_field :url, :class => "text_field rc_5 form-control input-medium" ,:placeholder => "URL" , :id => "url", :tabindex => 4 %>
                </div>
              </div>
            </div>
            <div class="btn-wrap btn-update-info">
              <%= f.submit  "Save", :class => "button medium orange", :tabindex => 5  %> |
              <a href="/admin/action_lists" class="article" id="back_to_users">Back</a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>